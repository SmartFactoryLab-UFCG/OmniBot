<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:macro name="roller" params="suffix parent xyz rpy">
    <link name="roller_link_${suffix}">
      <visual>
        <geometry>
          <mesh filename="package://ros2_omni_robot_sim/meshes/3w_v2/roller.stl" />
        </geometry>
        <material name="black">
          <color rgba="0 0 0 1" />
        </material>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://ros2_omni_robot_sim/meshes/3w_v2/roller.stl" />
        </geometry>
      </collision>
      <inertial>
        <mass value="0.009" />
        <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
      </inertial>
    </link>

    <joint name="roller_joint_${suffix}" type="continuous">
      <parent link="${parent}" />
      <child link="roller_link_${suffix}" />
      <origin xyz="${xyz}" rpy="${rpy}" />
      <axis xyz="0 0 1" />
    </joint>

    <gazebo reference="roller_link_${suffix}">
      <selfCollide>true</selfCollide>
      <collision>
        <surface>
          <friction>
            <ode>
              <mu>1.0</mu>
              <mu2>1.0</mu2>
            </ode>
          </friction>
        </surface>
      </collision>
    </gazebo>
  </xacro:macro>
</robot>